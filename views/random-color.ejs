<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head', { title: 'Random Color' }) %>
    <body>
        <div class="container">
            <div class="row m-3">
                <h1 class="text-center">Random Color</h1>
            </div>
            <div class="row">
                <div class="card p-0 mx-auto" style="width: 90%">
                    <div class=" container-fluid card-img-top" style="background: <%= hexColor %>; height: 20rem">
                        &nbsp;
                    </div>
                    <% if (colorName && typeof colorName === 'string') { %>
                        <div class="card-body">
                            <%= colorName %>
                        </div>
                    <% } else { %>
                        <div id="color-name-div" class="card-body" hidden>
                        </div>
                        <script>
                            document.addEventListener('DOMContentLoaded', async() => {
                                const hexColor = "<%= hexColor %>";
                                displayColorName(hexColor);
                            });
                        </script>
                    <% } %>
                </div>
            </div>
        </div>
        <%- include('includes/footer') %>
        <script src="scripts/color-name.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    </body>
</html>
